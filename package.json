{
  "name": "Record",
  "version": "0.0.1",
  "description": "Desktop, mobile and web app for Record.",
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mistakia/record-app"
  },
  "homepage": "https://github.com/mistakia/record-app",
  "keywords": [],
  "src": "./",
  "test": "./test",
  "dist": "./dist",
  "mainInput": "main",
  "mainOutput": "main",
  "main": "index.desktop.html",
  "scripts": {
    "install": "cd nodejs-assets/nodejs-project && npm ci",
    "clean": "rm -rf $TMPDIR/react-* && watchman watch-del-all && npm cache clean --force",
    "start": "REACT_DEBUGGER=\"open -g 'rndebugger://set-debugger-loc?port=8081' ||\" node node_modules/react-native/local-cli/cli.js start --reset-cache",
    "lint": "$(npm bin)/standard 'src/**/*.js' && $(npm bin)/standard 'nodejs-assets/nodejs-project/main.js'",
    "lint:fix": "$(npm bin)/standard --fix 'src/**/*.js'",
    "build": "grunt build",
    "build:nodejs-mobile": "cd nodejs-assets/nodejs-project && $(npm bin)/browserify -o bundle.js --node --im -u 'leveldown' main.js",
    "build:ios": "react-native bundle --reset-cache --entry-file src/index.ios.js --bundle-output ios/main.jsbundle --platform ios --dev false",
    "build:ios:dev": "react-native bundle --reset-cache --entry-file src/index.ios.js --bundle-output ios/main.jsbundle --platform ios --dev true",
    "rebuild:electron": "npm rebuild --runtime=electron --target=$(electron -v) --abi=$(electron --abi) --disturl=https://atom.io/download/atom-shell",
    "rebuild:node": "npm rebuild",
    "start:ios": "react-native run-ios",
    "start:android": "react-native bundle --entry-file src/index.android.js --bundle-output android/app/src/main/assets/index.android.bundle --platform android --dev true",
    "start:electron": "grunt serve-electron",
    "start:electron:dist": "grunt serve-electron:dist",
    "start:web": "grunt serve-web",
    "start:web:dist": "grunt serve-web:dist"
  },
  "window": {
    "toolbar": true,
    "min_width": 300,
    "min_height": 475,
    "max_width": 800,
    "max_height": 600
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "debug": "^3.1.0",
    "grunt": "^1.0.1",
    "history": "^4.6.1",
    "immutable": "^3.8.2",
    "ipfs": "^0.29.3",
    "ipfs-pubsub-room": "^1.3.0",
    "logplease": "^1.2.13",
    "nodejs-mobile-react-native": "^0.1.4",
    "normalize.css": "^8.0.0",
    "orbit-db": "^0.19.8",
    "orbit-db-pubsub": "^0.5.3",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-native": "^0.55.4",
    "react-native-fs": "^2.9.12",
    "react-native-vector-icons": "^4.6.0",
    "react-redux": "^5.0.4",
    "react-router": "^4.1.1",
    "react-router-dom": "^4.1.1",
    "react-router-native": "^4.2.0",
    "react-router-redux": "^5.0.0-alpha.9",
    "record-node": "github:mistakia/record-node#77795f1",
    "redux": "^3.6.0",
    "redux-immutable": "^4.0.0",
    "redux-saga": "^0.15.3",
    "reselect": "^3.0.1",
    "serve-static": "^1.10.2",
    "whatwg-fetch": "^2.0.3"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-core": "^6.7.2",
    "babel-loader": "^7.1.4",
    "babel-plugin-module-resolver": "3.0.0-beta.3",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-react-native": "1.9.2",
    "css-loader": "^0.23.1",
    "electron": "^2.0.0",
    "electron-devtools-installer": "^2.2.3",
    "electron-rebuild": "^1.7.3",
    "eslint-plugin-react": "^4.2.3",
    "file-loader": "^0.8.5",
    "grunt-cli": "^0.1.13",
    "grunt-concurrent": "^2.2.1",
    "grunt-contrib-clean": "^1.0.0",
    "grunt-contrib-connect": "^1.0.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-exec": "^0.4.6",
    "grunt-open": "^0.2.3",
    "grunt-webpack": "^3.0.2",
    "load-grunt-tasks": "^3.4.1",
    "nib": "^1.1.2",
    "react-hot-loader": "3.0.0-beta.6",
    "react-native-cli": "^2.0.1",
    "redbox-react": "^1.3.6",
    "standard": "^11.0.1",
    "style-loader": "^0.13.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "url-loader": "^0.5.7",
    "webpack": "^3.11.0",
    "webpack-dev-server": "^2.11.1"
  }
}
